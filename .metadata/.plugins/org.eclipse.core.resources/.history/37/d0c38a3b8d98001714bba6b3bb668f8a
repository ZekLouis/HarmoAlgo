import java.awt.GridLayout;

import javax.swing.JLabel;
import javax.swing.JPanel;

public class JPanelCarnet extends JPanel{
	
	private CarnetAdresses carnet;
	
	public JPanelCarnet(CarnetAdresses carnet) {
		
		System.out.println(carnet);
		
		this.carnet = carnet;
		
		this.setLayout(new GridLayout(5,3));
		
		this.add(new JLabel("Nom"), 0,0);
		this.add(new JLabel("Prénom"), 0,1);
		this.add(new JLabel("Adresse"), 0,2);
		this.add(new JLabel("Nom"), 1,0);
		this.add(new JLabel("Prénom"), 1,1);
		this.add(new JLabel("Adresse"), 1,2);
		this.add(new JLabel("Nom"), 2,0);
		this.add(new JLabel("Prénom"), 2,1);
		this.add(new JLabel("Adresse"), 2,2);
		this.add(new JLabel("Nom"), 3,0);
		this.add(new JLabel("Prénom"), 3,1);
		this.add(new JLabel("Adresse"), 3,2);
		this.add(new JLabel("Nom"), 4,0);
		this.add(new JLabel("Prénom"), 4,1);
		this.add(new JLabel("Adresse"), 4,2);
		
		
		int i = 1;
		
		for(Personne personne : this.carnet.getPersonnes()) {
			this.add(new JLabel(personne.getNom()), i,0);
			this.add(new JLabel(personne.getPrenom()), i,1);
			this.add(new JLabel(personne.getAdresse()), i,2);
			i++;
		}
		
	}

}
