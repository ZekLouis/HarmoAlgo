import java.awt.BorderLayout;

import javax.swing.JFrame;

public class UI extends JFrame{
	private CarnetAdresses carnet;
	
	public UI(CarnetAdresses carnet) {
		this.carnet = carnet;
		this.setTitle("Carnet d'adresses");
		this.setSize(800,600);
		this.setResizable(false);
		this.setLocationRelativeTo(null);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setLayout(new BorderLayout());
		
		this.getContentPane().add(new JPanelCenter(carnet), BorderLayout.CENTER);
	    this.getContentPane().add(new JPanelWest(carnet), BorderLayout.WEST);
	    this.getContentPane().add(new JPanelEast(carnet), BorderLayout.EAST);
	
		this.setVisible(true);
	}
}
